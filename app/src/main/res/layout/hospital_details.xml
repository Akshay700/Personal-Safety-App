<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hospital_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shashank.grimreaper.smartsuraksha24x7.HospitalDetails">
    <include
        android:id="@+id/mytoolbar2"
        layout="@layout/toolbar">
    </include>

    <ImageView
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_marginTop="28dp"
        android:id="@+id/hospital_poster"
        android:layout_below="@+id/mytoolbar2"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/hospital_name"
            android:text="NAME"
            android:textSize="23sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/hospital_address"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:text="ADDRESS"
            android:textSize="23sp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/hospital_phno"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:text="PHONE NO:  "
            android:textSize="23sp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/hospital_distance"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:text="DISTANCE"
            android:textSize="23sp"
            android:layout_height="match_parent" />

    </LinearLayout>


</RelativeLayout>
